// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paciente {
  id              Int        @id @default(autoincrement())
  nombre          String
  apellido        String
  fechaNacimiento DateTime
  genero          String
  direccion       String
  telefono        String
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  Consulta        Consulta[]
}

model Doctor {
  id           Int        @id @default(autoincrement())
  nombre       String
  apellido     String
  especialidad String
  telefono     String
  consultorio  String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  Consulta     Consulta[]
}

model Consulta {
  id         Int         @id @default(autoincrement())
  doctor     Doctor      @relation(fields: [doctorId], references: [id])
  doctorId   Int
  paciente   Paciente    @relation(fields: [pacienteId], references: [id])
  pacienteId Int
  fecha      DateTime
  hora       String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  Resultado  Resultado[]
}

model Examen {
  id          Int         @id @default(autoincrement())
  nombre      String
  descripcion String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  Resultado   Resultado[]
}

model Resultado {
  id         Int      @id @default(autoincrement())
  consulta   Consulta @relation(fields: [consultaId], references: [id])
  consultaId Int
  examen     Examen   @relation(fields: [examenId], references: [id])
  examenId   Int
  valor      Float
  unidad     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
