// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pelicula {
  id        String   @id @default(uuid())
  titulo    String
  genero    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sala {
  id        String   @id @default(uuid())
  numero    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  funciones Funcion[]
}

model Funcion {
  id         String   @id @default(uuid())
  fecha      String
  hora       String
  idPelicula Int
  precio     Int
  cupo       Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  sala   Sala   @relation(fields: [salaId], references: [id])
  salaId String
}

model Boleta {
  id        String   @id @default(uuid())
  idFuncion Int
  asiento   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
